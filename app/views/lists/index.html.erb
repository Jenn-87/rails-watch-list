<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/q8P8YoR6erg" >
  <div class="container">
    <h1>Save your favorite movies</h1>
    <p><span id="banner-typed-text"></span></p>
    <%= link_to 'Create a new list', new_list_path(@list), class: "btn btn-primary" %>
  </div>
</div>

<div class="container-list">
  <div class="list-text">
    <h2>My Lists</h2>
  </div>

  <div class="lists">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="list-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
      <% else %>
        <div class="list-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/sf_1ZDA1YFw')">
      <% end %>
  <h2><strong><%= link_to list.name, list_path(list) %></strong></h2>
    </div>
      <% end %>
    </div>
  </div>
  </div>
